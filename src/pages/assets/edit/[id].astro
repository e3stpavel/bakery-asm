---
import HomeLayout from '~/layouts/HomeLayout.astro'
import { getAllCategoriesAndAssetRelation } from '~/utils/data/asset-categories'
import { findAssetById } from '~/utils/data/assets'

if (!Astro.locals.user) {
  return new Response(null, {
    status: 404,
  })
}

const { id } = Astro.params
if (!id) {
  return new Response(null, {
    status: 404,
  })
}

const result = await findAssetById(id)
if (!result) {
  return new Response(null, {
    status: 404,
  })
}

const { asset } = result

const isAssetDeleted = asset.deleted_at && asset.deleted_by_id
if (isAssetDeleted) {
  return new Response(null, {
    status: 403,
  })
}

const categories = await getAllCategoriesAndAssetRelation(asset.id)
---

<HomeLayout title="Edit asset">
  <div class="overflow-hidden bg-white shadow sm:rounded-lg mt-10 max-sm:-mx-4">
    <form action="" class="px-4 py-6 sm:px-6">
      <div class="space-y-12 sm:space-y-16">
        <div>
          <h2 class="text-base font-semibold leading-7 text-gray-900">General information</h2>
          <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-600">Update general asset details like name, description etc.</p>

          <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
              <label for="id" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">ID</label>
              <div class="mt-2 sm:col-span-2 sm:mt-0">
                <input type="text" name="id" id="id" disabled value={asset.id} class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-fuchsia-600 sm:max-w-xs sm:text-sm sm:leading-6 disabled:cursor-not-allowed disabled:bg-gray-50 disabled:text-gray-500 disabled:ring-gray-200" >
              </div>
            </div>

            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
              <label for="name" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Name</label>
              <div class="mt-2 sm:col-span-2 sm:mt-0">
                <input type="text" name="name" id="name" value={asset.name} autocomplete="name" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-fuchsia-600 sm:max-w-xs sm:text-sm sm:leading-6" >
              </div>
            </div>

            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
              <label for="description" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Description</label>
              <div class="mt-2 sm:col-span-2 sm:mt-0">
                <textarea id="description" name="description" placeholder="<empty>" rows="3" class="block w-full max-w-2xl rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-fuchsia-600 sm:text-sm sm:leading-6">{ asset.description }</textarea>
                <p class="mt-3 text-sm leading-6 text-gray-600">Describe the asset in a few sentences</p>
              </div>
            </div>

            <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
              <label for="imageUrl" class="block text-sm font-medium leading-6 text-gray-900 sm:pt-1.5">Image URL</label>
              <div class="mt-2 sm:col-span-2 sm:mt-0">
                <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-fuchsia-600 sm:max-w-md">
                  <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">https://</span>
                  <input type="text" name="imageUrl" id="imageUrl" autocomplete="url" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" />
                </div>
              </div>
            </div>
          </div>
        </div>

        <div>
          <h2 class="text-base font-semibold leading-7 text-gray-900">Categories</h2>
          <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-600">Assign categories to asset or just remove some</p>

          <div class="mt-10 space-y-10 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:pb-0">
            <fieldset>
              <legend class="sr-only">Categories</legend>
              <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:py-6">
                <div class="text-sm font-semibold leading-6 text-gray-900" aria-hidden="true">Asset categories</div>
                <div class="mt-4 sm:col-span-2 sm:mt-0">
                  {categories.map(category => (
                    <div class="relative isolate overflow-clip first:rounded-tl-md first:rounded-tr-md last:rounded-bl-md last:rounded-br-md">
                      <input id="category-1" name="categories" type="checkbox" class="peer absolute left-4 inset-y-1/2 -translate-y-1/2 h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600" aria-labelledby="privacy-setting-0-label" aria-describedby="privacy-setting-0-description" checked={category.belongs_to_asset} />
                      <div class="flex rounded-[inherit] border border-gray-200 p-4 leading-6 text-sm peer-checked:border-indigo-200 peer-checked:bg-indigo-50">
                        <div class="ml-6 flex items-center gap-2 *:peer-checked:text-indigo-900">
                          <span id="privacy-setting-0-label" class="truncate font-medium">{ category.name }</span>
                          <span id="privacy-setting-0-description" class="flex-shrink-0 text-gray-400">#{ category.code }</span>
                        </div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </fieldset>
          </div>
        </div>
      </div>
      <div class="mt-6 flex items-center justify-end gap-x-6">
        <button type="reset" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
        <button type="submit" class="inline-flex justify-center rounded-md bg-fuchsia-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-fuchsia-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-fuchsia-600">Save changes</button>
      </div>
    </form>
  </div>
</HomeLayout>
